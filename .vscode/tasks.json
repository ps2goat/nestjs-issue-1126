    "version": "2.0.0",
    "tasks": [
        {
            "label": "build:watch",
            "type": "shell",
            "command": "npm",
            "args": [
              "run",
              "build:watch"
            ],
            "isBackground": true,
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
